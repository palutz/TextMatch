@{
    ViewBag.Title = "Text Match";
}
<form class="form-horizontal" style="padding:10px">
    <div class="page-header">
        <h1>Text match for strings</h1>
        <h1><small>Please insert your main string and the substring to search for</small><h1>
    </div>
    <div class="container">
        <div class="form-group">
            <label for="mainstring" class="col-sm-2 control-label">Main string</label>
            <input type="text" class="form-control" id="mainstring" name="text" placeholder="Insert the main string" aria-describedby="sizing-addon1">
        </div>
        <div class="form-group">
            <label for="substring" class="col-sm-2 control-label">Sub string</label>
            <input type="text" class="form-control" id="substring" name="subtext" placeholder="Insert the substring" aria-describedby="sizing-addon1">
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Run text match</button>
            </div>
        </div>
    </div>
</form>    
 
